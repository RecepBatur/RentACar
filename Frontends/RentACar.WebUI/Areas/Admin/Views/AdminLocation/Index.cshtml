@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lokasyon Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Anasayfanın lokasyon alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğü bozulmaması adına lütfen sadece bir tane veri girişi yapınız. Aksi durumlarda tema bütünlüğü bozulacaktır.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Lokasyon</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Konumu Aç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.LocationName</td>
                                        <td><a href="/Admin/AdminLocation/RemoveLocation/@item.LocationId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/AdminLocation/LocationDetail/@item.LocationId" class="btn btn-outline-secondary">Konumu Aç</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <td><a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Yeni Lokasyon Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

