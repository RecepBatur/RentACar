@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Banner Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Anasayfanın banner alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğü bozulmaması adına lütfen sadece bir tane veri girişi yapınız. Aksi durumlarda tema bütünlüğü bozulacaktır.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Video Url</th>
                                    <th>Video Açıklama</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Youtube</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.VideoUrl</td>
                                        <td>@item.VideoDescription</td>
                                        <td><a href="/Admin//AdminBanner/RemoveBanner/@item.BannerId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin//AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Banner/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-dark">Youtube</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <td><a href="/Admin//AdminBanner/CreateBanner/" class="btn btn-outline-primary">Yeni Banner Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

