@model List<RentACar.Dto.SocialMediaDtos.SocialMediaListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sosyal Medya Yönetimi</h4>
                    <p class="card-subtitle mb-4">
                        Kullandığınız sosyal medya hesaplarına ait bilgileri aşağıdaki alandan yönetebilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Aç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-dark">Aç</a></td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <td><a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni Hesap Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

